@model EmployeeCreateViewModel
@{
    ViewBag.Title = "Create User";
}
<form method="post" asp-action="Create" asp-controller="Home" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Name" class="col-form-label col-sm-2"></label>
        <div class=" col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-form-label col-sm-2"></label>
        <div class=" col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department" class="col-form-label col-sm-2"></label>
        <div class=" col-sm-10">
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
                <option value="">Please Select The Department</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-form-label col-sm-2"></label>
        <div class=" col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input">
                <label class="custom-file-label">choose file ...</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
    </div>

</form>
<div asp-validation-summary="All" class="text-danger"></div>
@section Script
{
<script>
    $(document).ready(function () {
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next(".custom-file-label").html(fileName);
        });
    });
</script>
    
}