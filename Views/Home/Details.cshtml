@model HomeDetailsViewModel;
@{
    ViewBag.Title = "Employee Details";
    string ImagePath = "~/images/" +( Model.Employee.PhotoPath?? "1.jpg");

}
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Employee.Name</h1>
                </div>
                <div class="card-body text-center">
                    <img class="card-img-top" src="@ImagePath"  asp-append-version="true"/>
                    <h3> Employee Id :@Model.Employee.Id</h3>
                    <h3>Employee Email :@Model.Employee.Email</h3>
                    <h3>Employee Department: @Model.Employee.Department</h3>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary m-1" asp-action="Index" asp-controller="Home">Back</a>
                    <a class="btn btn-primary m-1" asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Employee.Id">Edit</a>
                    <a class="btn btn-danger m-1" href="#">Delete</a>
                </div>
            </div>
        </div>
    </div>
@section Script
{
    <script src="~/CustomScript.js"></script>
}

