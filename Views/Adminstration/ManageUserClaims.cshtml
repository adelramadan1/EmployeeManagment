@model UserClaimsViewModel
@{
    ViewBag.Title = "Manage User Claims";
    var userid = ViewBag.userid;
}
<form method="post" asp-action="ManageUserClaims" asp-route-userid="@userid">
    <div class="card mt-3">
        <div class="card-header">
            <h1>Manage User Claims</h1>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button class="btn btn-primary" type="submit" style="width:auto">Update</button>
            <a asp-action="EditUser" asp-controller="Adminstration" asp-route-id="@userid" style="width:auto" class="btn btn-primary">cancel</a>
        </div>
    </div>
</form>