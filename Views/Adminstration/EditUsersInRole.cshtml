@model List<UsersRoleViewModel>
@{ 
    ViewBag.Title = "Edit Users In Role";
    var roleId = ViewBag.roleId;
}

<div class="card">
    <form method="post">
        <div class="card-header">
              <h2>Add Or Remove the Users from this Role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
            </div>

            }
        </div>
        <div class="card-footer">
            <button type="submit" value="Update" class="btn btn-primary" style="width:auto">Update</button>
            <a class="btn btn-primary" asp-action="EditRole" asp-controller="Adminstration"  asp-route-id="@roleId" style="width:auto">Cancel</a>
        </div>
    </form>
    
</div>